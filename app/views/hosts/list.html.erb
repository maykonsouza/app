

<div class="d-flex justify-content-center">

  <div class="rowa">      
      
    <p id="notice"><%= notice %></p>

    <p class="text-center h1">Lista de destinos</p>

    

    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Nome</th>
          <th scope="col">EndereÃ§o</th>
          <th colspan="3" scope="col">Ferramentas</th>
        </tr>
      </thead>
      <tbody>
        <% @hosts.each do |host| %>
          <tr>
            <th scope="row"><%= host.id %></th>
            <td><%= host.name %></td>
            <td><%= host.address %></td>
            <td><%= link_to 'Mostar', host, class:"btn btn-primary", :style => 'color: white';%></td>
            <td><%= link_to 'Editar', edit_host_path(host) ,class:"btn btn-warning", :style => 'color: black';  %></td>
            <td><%= link_to 'Deletar', host, method: :delete, class:"btn btn-danger", data: { confirm: 'Are you sure?' }, :style => 'color: white'; %></td>
          </tr>
        <% end %>
      </tbody>
    </table>


    <br>

    <%= link_to 'Adicionar', new_host_path, class:"btn btn-primary btn-lg", :style => 'color: white'; %>

  </div> 
</div>


